@page "/home"

<MudGrid>
    <MudItem xs="6">
        <MudText Typo="Typo.h5">Easily know who borrowed your tools and equipment</MudText>
        <MudText Typo="Typo.caption">
            Add the tool your lending to your items, track it forever. Always know where your tools are.  Quickly add a friend or family member to you borrower list lend them tool know you can keep track of who has it.
        </MudText>
        <MudSpacer></MudSpacer>
        <MudList T="string">
            <MudItem>
                Add tools to your list
            </MudItem>
            <MudItem>
                Add friends, family, coworders, and neighbors as borrowers
            </MudItem>
            <MudItem>
                Loan the tool to a borrower, borrower gets notified via email
            </MudItem>
            <MudItem>
                Include a return date
            </MudItem>
            <MudItem>
                Ask for the item back via Londing Tracker
            </MudItem>
        </MudList>
    </MudItem>
    <MudItem xs="6">
        <MudImage Height="300" Src="https://needthatbackstorage.blob.core.windows.net/media/logo_transparent_background.png?sp=r&st=2024-12-27T21:05:02Z&se=2028-01-02T05:05:02Z&spr=https&sv=2022-11-02&sr=c&sig=gmPc46HqQP8K2W%2FAoBP70Qpqf0zbI48AFJpsj9HEuuA%3D" />
    </MudItem>
    <MudItem xs="4">
        <MudText Typo="Typo.subtitle2">Items</MudText>
    </MudItem>
    <MudItem xs="4">
        <MudText Typo="Typo.subtitle2">Borrowers</MudText>
    </MudItem>
    <MudItem xs="4">
        <MudText Typo="Typo.subtitle2">Tracking</MudText>
    </MudItem>
</MudGrid>

