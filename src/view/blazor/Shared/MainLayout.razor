@using MudBlazor
@inherits LayoutComponentBase


<MudThemeProvider IsDarkMode="true" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText>Lending View</MudText>
        <MudSpacer />
        <LoginDisplay  />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen">
        <MyNavMenue></MyNavMenue>
    </MudDrawer>

    <MudMainContent>
        <MudContainer Name="Lending View" Value="@title" MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code{
    private string title = "Lending View";
    private bool _drawerOpen = true;

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
